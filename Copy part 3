CREATE TABLE VENTA (
    ID_VENTA            INTEGER     generated by default as identity increment by 1 start with 1 cache 20 order nocycle not null enable primary key, 
    ID_CLIENTE          INTEGER,
    FECHA               TIMESTAMP WITH TIME ZONE NOT NULL,
    MONTO_FINAL         FLOAT,
    CONSTRAINT VENTA_CLIENTE_FK FOREIGN KEY (ID_CLIENTE)REFERENCES CLIENTE (ID_CLIENTE)
);

CREATE TABLE PRODUCTO_CATEGORIA (
    ID_PRODUCTO         INTEGER,
    ID_CATEGORIA        INTEGER,
    CONSTRAINT PC_PRODUCTO_FK FOREIGN KEY (ID_PRODUCTO) REFERENCES PRODUCTO (ID_PRODUCTO),
    CONSTRAINT PC_CATEGORIA_FK FOREIGN KEY (ID_CATEGORIA) REFERENCES CATEGORIA (ID_CATEGORIA)
);

CREATE TABLE TELEFONO_CLIENTE (
    ID_TELEFONO        INTEGER,
    ID_CLIENTE        INTEGER,
    CONSTRAINT TC_TELEFONO_FK FOREIGN KEY (ID_TELEFONO) REFERENCES TELEFONO (ID_TELEFONO),
    CONSTRAINT TC_CLIENTE_FK FOREIGN KEY (ID_CLIENTE) REFERENCES CLIENTE (ID_CLIENTE)
);

CREATE TABLE PRODUCTO_PROVEEDOR (
    ID_PRODUCTO         INTEGER,
    ID_PROVEEDOR        INTEGER,
    CONSTRAINT PP_PRODUCTO_FK FOREIGN KEY (ID_PRODUCTO) REFERENCES PRODUCTO (ID_PRODUCTO),
    CONSTRAINT PP_PROVEEDOR_FK FOREIGN KEY (ID_PROVEEDOR) REFERENCES PROVEEDOR (ID_PROVEEDOR)
);
